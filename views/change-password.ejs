<%- include('partials/header') %> 

<div class="forms-area">
  <div class="form-group form-fields"> <h1>Change Password</h1> </div>
  <form action="/change-password" method="POST">

      <div class="form-group form-fields">
        <input type="text" class="form-control" required name="name" id="exampleFormControlInput1" placeholder="Username">
      </div>
      <div class="form-group form-fields">
        <input type="password" class="form-control" required name="oldpwd" id="exampleFormControlInput1" placeholder="Old Password">
      </div>
      <div class="form-group form-fields">
        <input type="password" class="form-control" required name="newpwd" id="exampleFormControlInput1" placeholder="New Password">
      </div>

      <div class="form-fields">
        <input class="form-check-input" required type="checkbox" value="" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault"> Confirm Change </label>
      </div>

      <div class="form-fields">
        <button type="submit" class="btn btn-danger mb-2">Change Password</button>
      </div>
    </form>
</div>

<%- include('partials/footer') %> 